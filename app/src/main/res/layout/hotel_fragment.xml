<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_hotel"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_Hotel"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_hotel"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/text_Hotel"
                android:id="@+id/et_place"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#11000000"
                android:hint="@string/text_hint"
                android:textSize="20sp" />


            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_place"
                android:layout_marginTop="10dp"
                android:layout_below="@id/et_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_place"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recycle_place"
                android:layout_below="@id/text_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_deals"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/recycle_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_deals"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_deal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text_deals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_world"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/recycle_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_world_hotel"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_world"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text_world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/lv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_place"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:visibility="gone" />


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>